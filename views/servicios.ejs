<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <header>
    <h1><%= title %></h1>
    <p>Conoce más sobre lo que ofrecemos para hacer tu estadía inolvidable.</p>
  </header>

  <section class="carousel">
    <div class="carousel-container">
      <% services.forEach((service, index) => { %>
        <div class="slide <%= index === 0 ? 'active' : '' %>">
          <img src="<%= service.image %>" alt="<%= service.name %>">
          <div class="caption"><%= service.name %></div>
        </div>
      <% }) %>
    </div>
  </section>
<!---------------------------------------------------IMAGENES QUE PASAMOS MEDIANTE FLECHAS O AUTOMATICAMENTE---------------------------------------------->
	<section class="carousel">
		<div class="carousel-container">

			<div class="mySlides fade">
				<a href="chuletas.html"><img src="images/spa.jpg" style="width:100%"></a>
			</div>

			<div class="mySlides fade">
				<a href="lechazos.html"><img src="images/gym.jpg" style="width:100%"></a>
			</div>

			<div class="mySlides fade">
				<a href="solomillos.html"><img src="images/restaurant.jpg" style="width:100%"></a>
			</div>

			<a class="prev" onclick="plusSlides(-1)">&#10094;</a>
			<a class="next" onclick="plusSlides(1)">&#10095;</a>

		</div>
	<br>

		<div style="text-align:center">
			<span class="dot"></span> 
			<span class="dot"></span> 
			<span class="dot"></span> 
		</div>

  <section class="services-list">
    <h2>Servicios disponibles</h2>
    <ul>
      <% services.forEach(service => { %>
        <li>
          <img src="<%= service.image %>" alt="<%= service.name %>">
          <p><%= service.name %></p>
        </li>
      <% }) %>
    </ul>
  </section>

  <script src="/javascripts/carousel.js"></script>
</body>
</html>


